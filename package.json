{
  "name": "d3-no-dom",
  "version": "1.0.0-beta.1",
  "description": "Fully use d3 in environments without DOM",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublish": "cross-env FORCE_COLOR=1 pnpm run clean && pnpm run build",
    "clean": "rimraf ./dist/",
    "build": "cross-env FORCE_COLOR=1 tsc",
    "test": "cross-env FORCE_COLOR=1 vitest",
    "types:check": "attw $(npm pack) --ignore-rules cjs-resolves-to-esm"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "d3",
    "ssr",
    "server-side-rendering",
    "typescript",
    "svg",
    "svg-to-png",
    "jsdom",
    "dom"
  ],
  "author": {
    "name": "Igor Klepacki",
    "url": "https://github.com/neg4n",
    "email": "neg4n@icloud.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.15.3",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/common-tags": "^1.8.4",
    "@types/d3": "^7.4.3",
    "@types/jsdom": "^21.1.7",
    "cross-env": "^7.0.3",
    "d3": "^7.9.0",
    "jsdom": "^24.1.0",
    "rimraf": "^5.0.7",
    "type-fest": "^4.20.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "common-tags": "^1.8.2",
    "dset": "^3.1.3",
    "remeda": "^2.0.9"
  },
  "peerDependencies": {
    "d3": "^7.9.0",
    "jsdom": "^24.1.0"
  }
}
